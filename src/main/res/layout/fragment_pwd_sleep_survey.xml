<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jfgaines.besiapp.SleepPatternChecklist"
    android:background="#E1BEE7">

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="20dp"
                android:text="Please select all that apply."
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="36dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearLayout14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView14"
                android:layout_alignRight="@+id/textView14"
                android:layout_below="@+id/textView14"
                android:layout_marginBottom="70dp"
                android:layout_marginRight="60dp"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/linearLayout14"
                android:layout_marginEnd="70dp"
                android:layout_marginRight="70dp"
                android:orientation="vertical"
                android:weightSum="1">

            </LinearLayout>
        </LinearLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <CheckBox
                android:id="@+id/checkMultipleBathroomVisits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="40dp"
                android:layout_marginRight="120dp"
                android:layout_row="0"
                android:button="@drawable/customcheckbox"
                android:checked="false"
                android:paddingLeft="10dp"
                android:text="Up multiple times to use bathroom"
                android:textSize="30dp" />

            <CheckBox
                android:id="@+id/checkDifficultyFallingAsleep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="40dp"
                android:layout_marginRight="120dp"
                android:layout_row="1"
                android:button="@drawable/customcheckbox"
                android:checked="false"
                android:paddingLeft="10dp"
                android:text="Difficulty falling asleep"
                android:textSize="30dp" />

            <CheckBox
                android:id="@+id/checkWakeUpFrequently"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginBottom="40dp"
                android:layout_row="0"
                android:button="@drawable/customcheckbox"
                android:checked="false"
                android:paddingLeft="10dp"
                android:text="Waking up frequently"
                android:textSize="30dp" />

            <CheckBox
                android:id="@+id/checkBadDreams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginBottom="40dp"
                android:layout_marginRight="120dp"
                android:layout_row="2"
                android:button="@drawable/customcheckbox"
                android:checked="false"
                android:paddingLeft="10dp"
                android:text="Bad dreams"
                android:textSize="30dp" />

            <CheckBox
                android:id="@+id/checkWakeUpEarly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginBottom="40dp"
                android:layout_row="1"
                android:button="@drawable/customcheckbox"
                android:checked="false"
                android:paddingLeft="10dp"
                android:text="Waking up earlier than usual"
                android:textSize="30dp" />

            <CheckBox
                android:id="@+id/checkMoreNaps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkBox25"
                android:layout_column="1"
                android:layout_marginBottom="40dp"
                android:layout_row="2"
                android:button="@drawable/customcheckbox"
                android:checked="false"
                android:paddingLeft="10dp"
                android:text="More naps than usual"
                android:textSize="30dp" />

            <CheckBox
                android:id="@+id/checkRestlessOveractive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/daily_survey_submit"
                android:layout_alignRight="@+id/daily_survey_submit"
                android:layout_below="@+id/linearLayout6"
                android:layout_column="0"
                android:layout_row="3"
                android:button="@drawable/customcheckbox"
                android:checked="false"
                android:paddingLeft="10dp"
                android:text="Restless or overactive"
                android:textSize="30dp" />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="1">

            <Button
                android:id="@+id/daily_survey_back"
                android:layout_width="400dp"
                android:layout_height="75dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_marginBottom="75dp"
                android:layout_marginLeft="120dp"
                android:layout_row="0"
                android:background="@drawable/buttonanimate"
                android:text="Back"
                android:textAllCaps="false"
                android:textSize="36dp"
                android:textStyle="bold"
                android:visibility="visible" />

            <Button
                android:id="@+id/daily_survey_submit"
                android:layout_width="400dp"
                android:layout_height="75dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_column="1"
                android:layout_gravity="right|top"
                android:layout_marginBottom="75dp"
                android:layout_marginRight="120dp"
                android:layout_row="0"
                android:background="@drawable/loginbtnanimate"
                android:text="Submit"
                android:textAllCaps="false"
                android:textSize="36dp"
                android:textStyle="bold"
                android:visibility="visible" />
        </GridLayout>

    </LinearLayout>


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView4"
        android:layout_gravity="top|right"
        android:src="@drawable/pwd"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>
