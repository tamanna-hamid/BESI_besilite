<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/AgitationLayoutNotif"
    android:clickable="false"
    android:background="#E1BEE7">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <!-- Notifications Text Header -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Notifications"
                android:id="@+id/textView_notifications"
                android:textStyle="bold"
                android:textSize="36dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="40dp" />

        </LinearLayout>


        <GridLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="2"
            android:layout_marginTop="0dp"
            >
            <!-- START Questions and Buttons -->
            <LinearLayout
                android:layout_row="0"
                android:layout_column="0"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout_notif_question1"
                    android:layout_below="@+id/textView_notifications"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:id="@+id/textView_notif_question1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notifications_question1"
                        android:textSize="@dimen/notif_textview_q_textsize"
                        android:textColor="@color/question_textview_enabled"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/btn_notif_q1_yes"
                            android:layout_width="@dimen/notif_btn_yes_layout_width"
                            android:layout_height="@dimen/notif_btn_yes_layout_height"
                            android:layout_marginLeft="@dimen/notif_btn_yes_layout_marginLeft"
                            android:layout_marginTop="@dimen/notif_btn_yes_layout_marginTop"
                            android:layout_marginBottom="@dimen/notif_btn_yes_layout_marginBottom"
                            android:background="@drawable/buttonanimate"
                            android:text="@string/notifications_btn_yes"
                            android:textSize="@dimen/notif_btn_yes_textSize"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_notif_q1_no"
                            android:layout_width="@dimen/notif_btn_no_layout_width"
                            android:layout_height="@dimen/notif_btn_no_layout_height"
                            android:layout_marginBottom="@dimen/notif_btn_no_layout_marginBottom"
                            android:layout_marginLeft="@dimen/notif_btn_no_layout_marginLeft"
                            android:layout_marginTop="@dimen/notif_btn_no_layout_marginTop"
                            android:background="@drawable/buttonanimate"
                            android:text="@string/notifications_btn_no"
                            android:textSize="@dimen/notif_btn_no_textSize"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout_notif_question2"
                    android:layout_alignTop="@+id/linearLayout_notif_question3"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true">

                    <TextView
                        android:id="@+id/textView_notif_question2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notifications_question2"
                        android:textSize="@dimen/notif_textview_q_textsize"
                        android:textColor="@color/question_textview_enabled"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/btn_notif_q2_yes"
                            android:layout_width="@dimen/notif_btn_yes_layout_width"
                            android:layout_height="@dimen/notif_btn_yes_layout_height"
                            android:layout_marginBottom="@dimen/notif_btn_yes_layout_marginBottom"
                            android:layout_marginTop="@dimen/notif_btn_yes_layout_marginTop"
                            android:layout_marginLeft="@dimen/notif_btn_yes_layout_marginLeft"
                            android:background="@drawable/buttonanimate"
                            android:text="@string/notifications_btn_yes"
                            android:textSize="@dimen/notif_btn_yes_textSize"
                            android:textStyle="bold" />
                        <Button
                            android:id="@+id/btn_notif_q2_no"
                            android:layout_width="@dimen/notif_btn_no_layout_width"
                            android:layout_height="@dimen/notif_btn_no_layout_height"
                            android:layout_marginBottom="@dimen/notif_btn_no_layout_marginBottom"
                            android:layout_marginTop="@dimen/notif_btn_no_layout_marginTop"
                            android:layout_marginLeft="@dimen/notif_btn_no_layout_marginLeft"
                            android:background="@drawable/buttonanimate"
                            android:text="@string/notifications_btn_no"
                            android:textSize="@dimen/notif_btn_no_textSize"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout_notif_question3"
                    android:layout_alignTop="@+id/linearLayout_notif_question2"
                    android:layout_toRightOf="@+id/linearLayout11_notif"
                    android:layout_toEndOf="@+id/linearLayout11_notif">

                    <TextView
                        android:id="@+id/textView_notif_question3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notifications_question3"
                        android:textSize="@dimen/notif_textview_q_textsize"
                        android:textColor="@color/question_textview_enabled"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/btn_notif_q3_yes"
                            android:layout_width="@dimen/notif_btn_yes_layout_width"
                            android:layout_height="@dimen/notif_btn_yes_layout_height"
                            android:layout_marginBottom="@dimen/notif_btn_yes_layout_marginBottom"
                            android:layout_marginTop="@dimen/notif_btn_yes_layout_marginTop"
                            android:layout_marginLeft="@dimen/notif_btn_yes_layout_marginLeft"
                            android:background="@drawable/buttonanimate"
                            android:text="@string/notifications_btn_yes"
                            android:textSize="@dimen/notif_btn_yes_textSize"
                            android:textStyle="bold" />
                        <Button
                            android:id="@+id/btn_notif_q3_no"
                            android:layout_width="@dimen/notif_btn_no_layout_width"
                            android:layout_height="@dimen/notif_btn_no_layout_height"
                            android:layout_marginBottom="@dimen/notif_btn_no_layout_marginBottom"
                            android:layout_marginTop="@dimen/notif_btn_no_layout_marginTop"
                            android:layout_marginLeft="@dimen/notif_btn_no_layout_marginLeft"
                            android:background="@drawable/buttonanimate"
                            android:text="@string/notifications_btn_no"
                            android:textSize="@dimen/notif_btn_no_textSize"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <!-- ListView with all the events -->
            <LinearLayout
                android:layout_row="0"
                android:layout_column="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="80dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Recent Notifications"
                    android:textStyle="bold"
                    android:textSize="28dp"
                    android:textColor="@color/question_textview_enabled"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="40dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ListView
                        android:id="@+id/listViewNotif"
                        android:layout_width="300dp"
                        android:layout_height="208dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:fadingEdgeLength="3dp"
                        android:footerDividersEnabled="false"
                        android:requiresFadingEdge="vertical"
                        android:scrollbars="none" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp">

                        <Button
                            android:id="@+id/button_scrollup_notifs"
                            android:layout_width="50dp"
                            android:layout_height="101dp"
                            android:background="@drawable/buttonanimate"
                            android:text="▲"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/button_scrolldown_notifs"
                            android:layout_width="50dp"
                            android:layout_height="101dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonanimate"
                            android:text="▼"
                            android:textSize="20dp" />
                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>
            <!-- END Questions and Buttons-->


        </GridLayout>



        <GridLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="2"
            android:layout_marginTop="0dp"
            >

            <Button
                android:id="@+id/backFromNotifs"
                android:layout_width="400dp"
                android:layout_height="75dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/buttonanimate"
                android:text="Back"
                android:textAllCaps="false"
                android:textSize="36dp"
                android:textStyle="bold"
                android:visibility="visible" />


            <Button
                android:id="@+id/notifsNextToIntervention"
                android:layout_width="400dp"
                android:layout_height="75dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="right|top"
                android:layout_marginTop="24dp"
                android:layout_marginRight="120dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/buttonanimate"
                android:text="Next"
                android:textAllCaps="false"
                android:textSize="36dp"
                android:textStyle="bold" />
        </GridLayout>
<!--android:layout_marginTop="40dp"-->
        <!--android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"-->
    </LinearLayout>

    <!--<ImageView-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:id="@+id/imageView3_notif"-->
        <!--android:layout_gravity="right"-->
        <!--android:src="@drawable/pwd"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_alignParentRight="true" />-->

</RelativeLayout>
